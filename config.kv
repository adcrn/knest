<LoadDialog>:
    BoxLayout:
		size: root.size
        pos: root.pos
        orientation: 'vertical'

        FileChooserIconView:
            id: filechooser
            dirselect: True

        BoxLayout:
            size_hint_y: None
            height: dp(35)
            
            Button:
                text: 'Cancel'
                font_name: 'assets/Montserrat-Regular'
                on_release: root.cancel()

            Button:
                text: 'Load'
                font_name: 'assets/Montserrat-Regular'
                on_release: root.load(filechooser.path)