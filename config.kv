#:kivy 1.10.1
#:import Clock kivy.clock.Clock

<LandingScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "knest.png"
    Button:
        background_color: (0.0, 0.0, 0.0, 0.0)
        on_release: app.root.current = 'folder_select'

<FolderSelectScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
        	id: title
            font_size: 100
            font_name: 'Montserrat-Regular'
            text: "K N E S T"
            top: root.height * 3 / 4
            center_x: root.width / 2

        Image:
            center_x: root.width / 2
            center_y: root.height * 1 / 1.5
            size: self.size
            source: 'color_bird.png'          

        Label:
        	id: path
        	font_size: 50
            font_name: 'Montserrat-Regular'
        	text: 'Please choose a directory'

        BoxLayout:
            orientation: 'vertical'
            center_x: root.width / 2
            center_y: root.height * 1 / 3
            size: (400, 400)
            height: 100

            Button:
                text: "Choose folder"
                font_name: 'Montserrat-Regular'
                on_release: root.show_load()

            Button:
                text: "Start"
                font_name: 'Montserrat-Regular'
                on_release: app.root.current = 'progress'

<ProgressScreen>:
	BoxLayout:
		orientation: 'vertical'
		Label:
			id: progress
			font_size: 60
            font_name: 'Montserrat-Regular'
			text: "Processing..."
			top: root.height / 2
			center_x: root.width / 2

<LoadDialog>:
    BoxLayout:
		size: root.size
        pos: root.pos
        orientation: 'vertical'
        FileChooserIconView:
            id: filechooser
            dirselect: True

        BoxLayout:
            size_hint_y: None
            height: 70
            Button:
                text: 'Cancel'
                font_name: 'Montserrat-Regular'
                on_release: root.cancel()

            Button:
                text: 'Load'
                font_name: 'Montserrat-Regular'
                on_release: root.load(filechooser.path, filechooser.selection)