#:kivy 1.10.1
#:import Clock kivy.clock.Clock

<LandingScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "knest.png"
    Button:
        background_color: (0.0, 0.0, 0.0, 0.0)
        on_release: app.root.current = 'folder_select'

<FolderSelectScreen>:
    on_leave: self.ids.path.text = "Please choose a directory"

    BoxLayout:
        orientation: 'vertical'
        Label:
        	id: title
            font_size: 100
            font_name: 'Montserrat-Regular'
            text: "K N E S T"
            top: root.height * 3 / 4
            center_x: root.width / 2

        Image:
            center_x: root.width / 2
            center_y: root.height * 1 / 1.5
            size: self.size
            source: 'color_bird.png'          

        Label:
        	id: path
        	font_size: 50
            font_name: 'Montserrat-Regular'
        	text: 'Please choose a directory'

        BoxLayout:
            orientation: 'vertical'
            center_x: root.width / 2
            center_y: root.height * 1 / 3
            size: (400, 400)
            height: 100

            Button:
                text: "Choose folder"
                font_name: 'Montserrat-Regular'
                on_release: root.show_load()

            Button:
                text: "Start"
                font_name: 'Montserrat-Regular'
                on_release: root.check_path()

<BlackScreen>:
    on_enter: Clock.schedule_once(root.switch, 1.5)

<ProgressScreen>:
    on_enter: Clock.schedule_once(root.switch, 3)

    Image:
        id: image
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint_y: None  # Tells the layout to ignore the size_hint in y dir
        height: dp(200)  # The fixed height you want
        source: 'color_bird.png'

<BlackScreen2>:
    on_enter: Clock.schedule_once(root.switch, 2)

<ProcessScreen>:
    on_enter: Clock.schedule_interval(root.update, 1)
    on_leave: Clock.unschedule(root.update)
    on_leave: self.ids.image.source = ''
    on_leave: self.ids.image.color = (0.0, 0.0, 0.0, 0.0)
    on_leave: self.ids.result.source = ''
    on_leave: self.ids.result.color = (0.0, 0.0, 0.0, 0.0)


    Label:
        id: message
        pos_hint: {'center_x': 0.5, 'center_y': 0.2}
        font_size: 50
        font_name: 'Montserrat-Regular'
        text: 'Detecting Blur'

    Image:
        id: image
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint_y: None  # Tells the layout to ignore the size_hint in y dir
        height: dp(300)  # The fixed height you want
        color: (0.0, 0.0, 0.0, 0.0)
        source: ''

    Image:
        id: result
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint_y: None  # Tells the layout to ignore the size_hint in y dir
        height: dp(300)  # The fixed height you want
        color: (0.0, 0.0, 0.0, 0.0)
        source: ''

<BlackScreen3>:
    on_enter: Clock.schedule_once(root.switch, 1)

<EndScreen>:
    BoxLayout:
        orientation: 'vertical'

        Label:
            id: message
            font_size: 75
            font_name: 'Montserrat-Regular'
            text: 'P R O C E S S   C O M P L E T E'

        Image:
            id: image
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint_y: None  # Tells the layout to ignore the size_hint in y dir
            height: dp(200)  # The fixed height you want
            source: 'gray_bird.png'

        Label:
            id: continue
            font_size: 45
            font_name: 'Montserrat-Regular'
            text: 'Click Anywhere to Continue'

    Button:
        background_color: (0.0, 0.0, 0.0, 0.0)
        on_release: app.root.current = 'folder_select'


<LoadDialog>:
    BoxLayout:
		size: root.size
        pos: root.pos
        orientation: 'vertical'
        FileChooserIconView:
            id: filechooser
            dirselect: True

        BoxLayout:
            size_hint_y: None
            height: 70
            Button:
                text: 'Cancel'
                font_name: 'Montserrat-Regular'
                on_release: root.cancel()

            Button:
                text: 'Load'
                font_name: 'Montserrat-Regular'
                on_release: root.load(filechooser.path, filechooser.selection)