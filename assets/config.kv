<AdvancedSettings@Popup>:
    auto_dismiss: False
    title: 'Advanced Settings'
    title_font: '/Users/ayylmao/Desktop/knest/assets/Montserrat-Regular'
    title_size: sp(16)
    size_hint: (.4, .6)
    comp: gv.comp
    crop: gv.crop
    landscape: gv.landscape

    BoxLayout:
        orientation: 'vertical'

        FloatLayout:
            Label:
                id: caption1
                text: "REDUCE SIMILARITY"
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                font_name: '/Users/ayylmao/Desktop/knest/assets/Montserrat-Regular'
                font_size: dp(10)
                pos_hint: {'center_x': .6, 'center_y': .6}

            Switch:
                id: compare
                active: True if gv.comp else False
                size_hint_x: None
                size_hint_y: None
                # actual size of built-in kivy switch image
                size_x: dp(83)
                size_y: dp(32)
                pos_hint: {'center_x': .75, 'center_y': .6}
                on_active: gv.fs.update_compare(root)

            Label:
                id: caption2
                text: "CROP IMAGES"
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                font_name: '/Users/ayylmao/Desktop/knest/assets/Montserrat-Regular'
                font_size: dp(10)
                pos_hint: {'center_x': .6, 'center_y': .3}

            Switch:
                id: crop
                active: True if gv.crop else False
                size_hint_x: None
                size_hint_y: None
                # actual size of built-in kivy switch image
                size_x: dp(83)
                size_y: dp(32)
                pos_hint: {'center_x': .75, 'center_y': .3}
                on_active: gv.fs.update_crop(root)

            Label:
                id: caption3
                text: "LANDSCAPE STYLE"
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                opacity: 1 if gv.crop else .5
                font_name: '/Users/ayylmao/Desktop/knest/assets/Montserrat-Regular'
                font_size: dp(10)
                pos_hint: {'center_x': .6, 'center_y': 0}

            Switch:
                id: landscape
                active: True if gv.crop and gv.landscape else False
                disabled: False if gv.crop else True
                size_hint_x: None
                size_hint_y: None
                # actual size of built-in kivy switch image
                size_x: dp(83)
                size_y: dp(32)
                pos_hint: {'center_x': .75, 'center_y': 0}
                on_active: gv.fs.update_orientation(root)

        BoxLayout:
            orientation: 'horizontal'

            Button:
                text: 'Cancel'
                size_hint_y: None
                height: dp(25)  
                font_name: '/Users/ayylmao/Desktop/knest/assets/Montserrat-Regular'
                on_release: gv.comp = root.comp
                on_release: gv.crop = root.crop
                on_release: gv.landscape = root.landscape
                on_release: root.dismiss()

            Button:
                text: 'OK'
                size_hint_y: None
                height: dp(25)  
                font_name: '/Users/ayylmao/Desktop/knest/assets/Montserrat-Regular'
                on_release: root.dismiss()

